{% extends 'adminBase.html.twig' %}

{% block adminBody %}
    <div class="container">
        <h1>Payments</h1>
        <table class="table table-bordered table-striped table-hover" id="payments">
            <thead class="thead-inverse">
            <tr>
                <th>ID</th>
                <th>Date</th>
                <th>Credit</th>
                <th>Amount</th>
                <th>Ignored</th>
                <th>Verified</th>
            </tr>
            </thead>
            <tbody>
            {% for payment in payments %}
                <tr>
                    <td>{{ payment.id }}</td>
                    <td>{{ payment.date|date }}</td>
                    <td>{{ payment.credit.id }}</td>
                    <td>{{ payment.sum }}</td>
                    <td>{% if payment.ignored == true %}yes{% else %}no{% endif %} | <a href="/changeIgnoredState/{{ payment.id }}">change</a></td>
                    <td>{% if payment.verified == true %}yes{% else %}no{% endif %} | <a href="/changeVerifiedState/{{ payment.id }}">change</a></td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No payments.</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}